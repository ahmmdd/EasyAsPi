<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMenu"
    android:weightSum="2">

    <ImageView
        android:id="@+id/profile_view_imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/profile_view_tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile Undef"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:textSize="34sp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/profile_view_imageView" />

    <TextView
        android:id="@+id/profile_view_tvDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Undef \nDetails \nDetails \nDetails"
        android:textSize="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/profile_view_imageView"
        android:layout_marginTop="40dp" />


    <Button
        android:id="@+id/profile_view_btnEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Edit Profile"
        android:layout_marginBottom="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/profile_view_btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Delete Profile"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
